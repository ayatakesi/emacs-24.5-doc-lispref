#. type: vindex
#: frames.texi.orig:896
#, no-wrap
msgid "auto-raise, a frame parameter"
msgstr ""

#. type: item
#: frames.texi.orig:897
#, no-wrap
msgid "auto-raise"
msgstr ""

#. type: table
#: frames.texi.orig:900
msgid "If non-@code{nil}, Emacs automatically raises the frame when it is selected.  Some window managers do not allow this."
msgstr ""

#. type: vindex
#: frames.texi.orig:901
#, no-wrap
msgid "auto-lower, a frame parameter"
msgstr ""

#. type: item
#: frames.texi.orig:902
#, no-wrap
msgid "auto-lower"
msgstr ""

#. type: table
#: frames.texi.orig:905
msgid "If non-@code{nil}, Emacs automatically lowers the frame when it is deselected.  Some window managers do not allow this."
msgstr ""

#. type: vindex
#: frames.texi.orig:906
#, no-wrap
msgid "icon-type, a frame parameter"
msgstr ""

#. type: item
#: frames.texi.orig:907
#, no-wrap
msgid "icon-type"
msgstr ""

#. type: table
#: frames.texi.orig:912
msgid "The type of icon to use for this frame.  If the value is a string, that specifies a file containing a bitmap to use; @code{nil} specifies no icon (in which case the window manager decides what to show); any other non-@code{nil} value specifies the default Emacs icon."
