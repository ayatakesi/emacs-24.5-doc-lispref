#. type: vindex
#: frames.texi.orig:913
#, no-wrap
msgid "icon-name, a frame parameter"
msgstr ""

#. type: item
#: frames.texi.orig:914
#, no-wrap
msgid "icon-name"
msgstr ""

#. type: table
#: frames.texi.orig:917
